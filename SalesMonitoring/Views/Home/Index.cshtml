@{
    ViewBag.Title = "Продажи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .inc {
        color: #f00;
    }

        .inc:before {
            content: '+';
        }

    /*#gridContainer .dec:before {
        content: '-';
    }*/

    .dec {
        color: #2ab71b;
    }

    .inc:after {
        background-image: url('data:image/png;base64,');
    }

    .dec:after {
        background-image: url('data:image/png;base64,');
    }
</style>
<div id="sale-monitoring">
    <div data-bind="dxLoadPanel: {closeOnOutsideClick: true, visible: isLoad}"></div>
    <section class="main">
        <section class="left-side">
            <div id="grid" data-bind="dxDataGrid: gridSaleSupersOptions"></div>

        </section>
        <section class="right-side">
            <div id="grid" data-bind="dxDataGrid: gridSaleAgentsOptions"></div>
            <div id="grid" class="prod" data-bind="dxDataGrid: gridProductsOptions"></div>
        </section>
        <div class="popup" data-bind="dxPopup: popupSaleOptionsGrid">
            <div class="info" data-options="dxTemplate: { name:'customers' }">
                <div class="col-md-6">
                    <div data-bind="dxDataGrid: gridSaleCustomersOptions"></div>
                </div>
                <div class="col-md-6">
                    <div data-bind="dxDataGrid: gridCustomerProductsOptions"></div>
                </div>

            </div>
        </div>
    </section>
</div>





