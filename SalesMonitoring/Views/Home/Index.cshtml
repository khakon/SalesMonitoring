@{
    ViewBag.Title = "Продажи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	#sale-product {
		margin: 0;
		padding: 0;
		font-family: 'Segoe UI', 'Helvetica Neue', Helvetica, 'Trebuchet MS', Verdana;
		height: 100%;
		width: 100%;
		min-width: 1024px;
		min-height: 748px;
		background-color: #efefef;
	}

	div.grid-container {
		display: flex;
		justify-content: space-around;
	}

	#sale-product section.grid {
		color: #848484;
		font-size: 16px;
		font-weight: normal;
		height: 100%;
		background-color: #fff;
		border: 1px solid #cfcfcf;
		border-radius: 1px;
		box-shadow: 0 1px 4px 0 rgba(0,0,0,0.1);
		padding: 20px;
		box-sizing: border-box;
		flex: 1;
	}

	#sale-product section.grid-2 {
		flex: 2;
	}

	.inc {
		color: #f00;
	}

	.dec {
		color: #2ab71b;
	}

	.inc:after {
		background-image: url('data:image/png;base64,');
	}

	.dec:after {
		background-image: url('data:image/png;base64,');
	}

	.dx-widget {
		color: #696969;
		font-weight: normal;
		font-size: 12px;
		font-family: 'Helvetica Neue', 'Segoe UI', Helvetica, Verdana, sans-serif;
		line-height: 1.35715;
	}
</style>
<div id="sale-monitoring">
	<div id="sale-product">
		<div class="grid-container">
			<section id="grid" class="grid"><div data-bind="dxDataGrid: gridSaleSupersOptions"></div></section>
			<section id="grid" class="grid"><div data-bind="dxDataGrid: gridSaleAgentsOptions"></div></section>
			<section id="grid" class="grid grid-2"><div data-bind="dxDataGrid: gridProductsOptions"></div></section>
		</div>
	</div>
	<div data-bind="dxLoadPanel: {closeOnOutsideClick: true, visible: isLoad}"></div>
	<div class="popup" data-bind="dxPopup: popupSaleOptionsGrid">
		<div class="info" data-options="dxTemplate: { name:'customers' }">
			<div class="col-md-6">
				<div data-bind="dxDataGrid: gridSaleCustomersOptions"></div>
			</div>
			<div class="col-md-6">
				<div data-bind="dxDataGrid: gridCustomerProductsOptions"></div>
			</div>

		</div>
	</div>
</div>





